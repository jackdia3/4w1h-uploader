<section id="feature" class="inview view">
    <div class="containers">
        {% for feature in features %}
        <div class="feature-block">
            {% if feature.image.filename %}
            <img
                src="{{ feature.image.filename | to_cdn }}"
                class="full-img"
                alt="{{ feature.image.alt }}"
            >
            {% endif %}
            {% if feature.youtube %}
            <div class="youtube">
                <iframe
                    src="{{ feature.youtube }}"
                    title="{{ feature.title }}"
                    frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen
                ></iframe>
            </div>
            {% endif %}
            <div class="main-text">
                <p class="p1">
                    <span style="text-decoration: underline">{{ feature.title }}</span>
                    <br>{{ feature.description | safe }}
                </p>
            </div>
        </div>
        {% endfor %}
    </div>
</section>

