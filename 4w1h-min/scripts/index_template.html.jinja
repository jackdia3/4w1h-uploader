{%- set _ = namespace(css_loaded=false) -%}
{% if not _.css_loaded %}
<style>
    /* ========== 共用區 ========== */
    body {
        font-family: "Noto Sans", "Helvetica Neue", Arial, sans-serif;
    }

    .full-img {
        display: block;
        width: 100%;
        max-width: 900px;
        margin: 0 auto;
        height: auto;
    }

    .center-img {
        display: block;
        margin: 0 auto;
    }

    /* 主要內容區塊寬度統一 */
    .txt-wrap,
    .spec,
    .tags,
    .notice,
    .wh-containers {
        max-width: 62%;
        margin: 2.2em auto;
    }

    .txt-wrap {
        line-height: 1;
        text-align: left;
    }

    .tags {
        text-align: center;
        font-size: 0.9em;
        color: #888;
    }

    /* 產品特點列表 */
    .feature-list {
        list-style: none;
        padding-left: 1.4em;
    }

    .feature-list li {
        position: relative;
        margin: 0.9em 0;
    }

    .feature-list li::before {
        content: "•";
        position: absolute;
        left: -1.2em;
    }

    /* 規格表格 */
    .spec {
        border-collapse: collapse;
        font-size: 1em;
        width: 100%;
        max-width: 800px;
        border: 1px solid #e9ecef;
        margin: 2em auto;
    }

    .spec .note {
        color: #c00;
        font-weight: 500;
    }

    .spec th,
    .spec td {
        border: 1px solid #e9ecef;
        padding: 1em;
        text-align: left;
    }

    .spec th {
        background: #f8f9fa;
        width: 30%;
        font-weight: 600;
    }

    /* 主文字區塊 */
    .main-text {
        max-width: 700px;
        margin: 2em auto;
        text-align: left;
        font-size: 1em;
    }

    /* 主圖與主文字同寬容器 */
    .main-block {
        max-width: 900px;
        margin: 0 auto 2em auto;
        text-align: center;
        position: relative;
    }

    .main-block img {
        max-width: 100%;
        height: auto;
        display: block;
        margin: 0 auto 1.2em auto;
    }

    .main-block .center-img {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        max-width: 180px;
        width: 32vw;
        margin: 0;
    }

    /* YouTube 影片區塊 */
    .youtube {
        text-align: center;
        margin: 2em auto 1.5em auto;
        max-width: 700px;
        margin-bottom: 2em;
        margin-top: 2em;
    }

    .youtube iframe {
        width: 100%;
        max-width: 100%;
        aspect-ratio: 16/9;
        height: auto;
        display: inline-block;
        border: none;
    }

    /* hero區塊 */
    .hero-section {
        position: relative;
        width: 100vw;
        left: 50%;
        right: 50%;
        margin-left: -50vw;
        margin-right: -50vw;
        overflow: hidden;
        background: #fff;
    }

    .hero-img {
        width: 100vw;
        max-width: 100%;
        height: auto;
        display: block;
        margin: 0 auto;
    }

    .hero-logo {
        text-align: center;
    }

    .hero-logo img {
        margin-top: 2em;
        margin-bottom: 2em;
        width: 200px;
        text-align: center;
    }

    /* feature區塊 */
    .feature-block {
        max-width: 900px;
        margin: 0 auto 2.5em auto;
        text-align: center;
    }

    /* .feature-block img,
    .feature-block iframe {
        width: 100%;
        max-width: 100%;
        height: auto;
        display: block;
    } */
    .rte img.full-img,
    .feature-block img.full-img {
        width: 100%;
        max-width: 900px;
        height: auto;
        display: block;
        margin: 0 auto;
    }

    .feature-block .main-text {
        text-align: left;
        margin: 0 auto;
        max-width: 100%;
        margin-bottom: 2em;
        margin-top: 1.5em;
        max-width: 700px;
    }

    /* 標題圖統一樣式 */
    .wh-title-img {
        height: 48px;
        vertical-align: baseline;
    }

    .wh-title-img-why {
        margin-bottom: -10px;
    }

    /* hashtag區塊 */
    .hashtag-box {
        background-image: repeating-linear-gradient(45deg,
                #f2f3f4,
                #f2f3f4 4px,
                #f9f9f9 4px,
                #f9f9f9 8px);
        color: #777;
        box-sizing: border-box;
        border: 1px solid #e9ecef;
        padding: 12px 16px;
        margin: 2em auto;
        font-size: 12px;
        line-height: 1.8;
        width: 100%;
        max-width: 800px;
    }

    /* 響應式設計 */
    @media (max-width: 768px) {

        .rte img.full-img,
        .feature-block img.full-img {

            width: 100vw;
            max-width: none;
            /* 移除原本的 max-width 限制 */
            margin-left: calc(-50vw + 50%);
        }

        .main-text,
        .feature-block {
            max-width: 92%;
            margin: 0 auto;
            margin-bottom: 2em;
            margin-top: 1.5em;
        }

        .main-text .p1 {
            margin-top: 1.2em;
            margin-bottom: 1.8em;
        }

        .main-block .center-img {
            width: 30vw;
            max-width: 320px;
        }
    }

    /* Berry 間距優化：main-text 內段落行距與段距 */
    .main-text .p1 {
        line-height: 1.8;
        margin-top: 1.5em;
        margin-bottom: 2em;
    }
</style>
{%- set _.css_loaded = true -%}
{% endif %}

